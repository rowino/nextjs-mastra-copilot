OPENROUTER_API_KEY=your_open_router_api_key

# CopilotKit
NEXT_PUBLIC_COPILOTKIT_PUBLIC_KEY=
BETTER_AUTH_SECRET=
# BETTER_AUTH_URL must match your development server URL for passkey to work
# For Next.js dev server with hot reload, use http://localhost:3000
# For Cloudflare Workers preview (pnpm dev:cf), use http://localhost:8787
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_BETTER_AUTH_URL=http://localhost:3000
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email Configuration
# Email provider: "resend" or "nodemailer" (optional, defaults to resend)
# In development without EMAIL_PROVIDER set, emails are logged to console
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@yourdomain.com
APP_URL=http://localhost:3000

# Resend Provider (if EMAIL_PROVIDER=resend)
RESEND_API_KEY=re_xxxxx

# Nodemailer Provider (if EMAIL_PROVIDER=nodemailer)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-username@example.com
SMTP_PASS=your-smtp-password

# Organization Invitations
INVITE_EXPIRATION_DAYS=7

# Feature Flags
NEXT_PUBLIC_ENABLE_EMAIL_PASSWORD=true
NEXT_PUBLIC_ENABLE_EMAIL_OTP=true
NEXT_PUBLIC_ENABLE_2FA=true
NEXT_PUBLIC_ENABLE_MAGIC_LINK=true
NEXT_PUBLIC_ENABLE_PASSKEY=true